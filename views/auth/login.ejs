<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    type="email" 
                    name="email" 
                    id="email" 
                    value="test0@test.com"
                    class="<%= validationErrors.find(e=>e.param==='email')?'invalid':''  %>" 
                >
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password" 
                    value="admin1"
                    class="<%= validationErrors.find(e=>e.param==='password')?'invalid':''  %>" 
                >
            </div>

            <!--button và input hidden không nằm trong class="form-control", vì chúng không chiếm nhiều không gian hàng ngang-->
            
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset">Reset Password</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>